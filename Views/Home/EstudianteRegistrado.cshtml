
@model IEnumerable<Estudiante>
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Estudiante Registrado- Convivencia</title>
    <link rel="stylesheet" type="text/css" href="css/Estilos.css">
</head>
<body>

<table>
<tr>
    <th>
       <label><b>DNI o Codigo de estudiante</b></label> 
    </th>
    <th>
        <label><b>Apelido Paterno:</b></label>
    </th>
    <th>
        <label><b>Apellido Materno:</b></label>
    </th>
    <th>
 <label><b>Nombres</b></label>
    </th>
    <th>
 <label><b>Fecha de nacimiento</b></label>
    </th>
    <th>
         <label><b>Edad</b></label>
    </th>
    <th>
         <label><b>Carrera</b></label>
    </th>
    <th>
          <label><b>Ciclo</b></label>
    </th>
    
</tr>
 <tr>
                    <th>
                        @Html.DisplayNameFor(model=>model.ID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model=>model.Apep)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model=>model.Apem)
                    </th>
                     <th>
                        @Html.DisplayNameFor(model=>model.Name)
                    </th>
                     <th>
                        @Html.DisplayNameFor(model=>model.Edad)
                    </th>
                    <th>
                        Ver
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model){
                        <!-- <tr style="background: white; color: gray;"> -->
                        <tr style="background: gray; color: white;">
                        <td>
                            @Html.DisplayFor(modelItem=>item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem=>item.Carr)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem=>item.Cic)
                        </td>
                        <td>
                            [<a asp-action="MostrarEstudiante" asp-route-id="@item.ID" style="color: red;">Detalles</a>]
                        </td>
                    </tr>
                }
            </tbody>
</table>

    <input type="submit" class="btn btn-info" value="Volver" style="margin: auto; display: block; margin-bottom: 40px;" onclick="window.history.back();"/>
</body>
</html>